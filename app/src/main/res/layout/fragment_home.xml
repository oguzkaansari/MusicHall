<?xml version="1.0" encoding="utf-8"?>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Top 50"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardRcyViewPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Weekly Mix"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/createMix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#8FA1E7"
                        android:text="Create Mix" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardRcyViewMix"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="From Your Library"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardRcyViewHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Play History"
                    android:textSize="22sp" />

                <ListView
                    android:id="@+id/historyListview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="35dp"
                    android:divider="@null"
                    android:dividerHeight="0dp" />

            </LinearLayout>
        </ScrollView>
